<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.controlderuta.guardianpadres.NewTypeRouteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarWhite"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:elevation="4dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <Button
                android:id="@+id/btnBackNewType"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/backarrow"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/toolbartitleTypeRoute"
                android:textColor="@color/colorPrimarytext"
                android:textSize="@dimen/principalletter20dp" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:elevation="4dp"
            android:background="@color/colorPrimaryDark">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorWhite"
                android:elevation="1dp"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin16dp"
                    android:text="@string/textTypeRoute"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="@dimen/margin30dp"
                    android:layout_marginRight="@dimen/margin30dp"
                    android:gravity="center"
                    android:elevation="4dp"
                    android:textSize="@dimen/principalletter16dp" />


                <Button
                    android:id="@+id/btnAddScolar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin50dp"
                    android:text="@string/buttomScolar"
                    android:textAlignment="center"
                    android:textSize="@dimen/principalletter18dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="@dimen/margin30dp"
                    android:theme="@style/RaisedButtonDark" />



                <Button
                    android:id="@+id/btnAddEnterprise"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin50dp"
                    android:text="@string/buttomEnterprise"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:elevation="4dp"
                    android:textSize="@dimen/principalletter18dp"
                    android:theme="@style/RaisedButtonDark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>



